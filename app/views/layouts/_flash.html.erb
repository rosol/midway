<% if notice %>
<div class="flash-wrapper container">
  <div class="alert span6">
    <button type="button" class="close" data-dismiss="alert">×</button>
    <strong>
      Notice
    </strong> 
    <%= notice %>
  </div>
</div>
<% end %>

<% if alert %>
<div class="flash-wrapper container">
  <div class="alert alert-error span6">
    <button type="button" class="close" data-dismiss="alert">×</button>
    <strong>
      Error!
    </strong> 
    <%= alert %>
  </div>
</div>
<% end %>